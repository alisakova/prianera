mixin characteristics(subtitle, scheme, size, materials)
  .panel
    .characteristics
      .characteristics__title= subtitle 
      .characteristics__types
        .characteristics__subtitle.characteristics__subtitle_margin-bottom Схема дивана
        .characteristics__types-container
          img(src="img/catalog/" + scheme, alt="Схема дивана")
      .characteristics__delivery
        .characteristics__subtitle Варианты размеров:&nbsp;
          span.characteristics__text= size
      .characteristics__materials
        .characteristics__subtitle Материалы:&nbsp;
          span.characteristics__text= materials
