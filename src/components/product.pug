mixin product(item)
  .product-container
    .product
      .product__name= item.name
      .product__img
        img(src="img/catalog/" + item.img, alt= item.name)
      .product__price-container
        .product__btn
          button.product__show-more._show-more-btn.accordion
    +characteristics(item.subtitle, item.scheme, item.size, item.materials)
    
